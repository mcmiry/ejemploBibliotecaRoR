<p id="notice"><%= notice %></p>

<font color="Red"><h1>Lista de Libros</h1></font>

<table cellspacing="5" cellpadding="3">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo %></td>
        <td><%= libro.autor.nombre + " " + libro.autor.apellidos %></td>
        <td><%= link_to 'Ver', libro %></td>
        <td><%= link_to 'Editar', edit_libro_path(libro) %></td>
        <td><%= link_to 'Eliminar', libro, method: :delete, data: { confirm: 'Â¿Seguro que deseas eliminarlo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to '+ Nuevo Libro', new_libro_path %></h2>
